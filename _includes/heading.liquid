{%- capture classes -%}
font-display leading-snug my-3
{%- endcapture -%}

{% if level == 1 %}
    <h1 class="text-5xl {{classes}}">{{text}}</h1>
{% elsif level == 2 %}
    <h2 class="text-4xl {{classes}}">{{text}}</h2>
{% elsif level == 3 %}
    <h3 class="text-3xl {{classes}}">{{text}}</h3>
{% elsif level == 4 %}
    <h4 class="text-2xl {{classes}}">{{text}}</h4>
{% endif %}
